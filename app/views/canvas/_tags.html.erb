<div class="tags-container pull-right">
  <% tags2 = my_module.tags.order(:id).take(4) %>
  <% tags2.each do |tag| %>
    <div style="color: <%= tag.color %>"
         class="<%= "last" if tag == tags2[-1] %>">
      <span class="fas fa-tag" title="<%= my_module.name %> tag <%= tag.name %>"></span>
    </div>
  <% end %>
  <% if tags2.length.zero? %>
    <div class="add-tag last"><span class="fas fa-tag"></span></div>
  <% end %>
  <% if my_module.tags.size.positive? %>
    <span title="task <%= my_module.name %> tags" class="badge badge-indicator">
      <%= my_module.tags.size %>
    </span>
  <% else %>
    <span title="task <%= my_module.name %> tags"  class="badge badge-indicator <%= "invisible" unless can_manage_my_module?(my_module) %>">
      +
    </span>
  <% end %>
</div>
