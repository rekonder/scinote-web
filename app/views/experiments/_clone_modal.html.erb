<div class="modal" id="clone-experiment-modal-<%= @experiment.id %>" tabindex="-1" role="dialog" aria-labelledby="clone-experiment-modal-label">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= bootstrap_form_for @experiment, url: clone_experiment_path(@experiment, :view_mode=>view_mode), method: :post do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" title="close clone modal">&times;</span></button>
          <h4 class="modal-title" id="clone-experiment-modal-label"><%= t("experiments.clone.modal_title", experiment: @experiment.name ) %></h5>
        </div>
        <div class="modal-body" onclick="addTitlesToOptions(this.getElementsByClassName('dropdown-menu inner')[0])">
          <%= f.select :project_id,
                       options_for_select(
                         @projects.collect do |p|
                           if p == @experiment.project
                             [ "#{p.name} #{t('experiments.clone.current_project')}", p.id ]
                           else
                             [ p.name, p.id ]
                           end
                         end,
                         @experiment.project.id ),
                       {}, {class: "form-control selectpicker", "data-role" => "clear", title: 'project selection for cloning'} %>
        </div>
        <div class="modal-footer">
          <button title="cancel button on clone modal" type="button" class="btn btn-secondary" data-dismiss="modal"><%=t "general.cancel" %></button>
          <%= f.submit t("experiments.clone.modal_submit"), class: "btn btn-primary", title: "duplicate button on clone modal" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
