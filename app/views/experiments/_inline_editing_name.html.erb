<div class="inline-editing-container"
  data-value="<%= initial_value %>"
  data-field-to-update="<%= config[:field_to_udpate] %>"
  data-path-to-update="<%= config[:path_to_update] %>"
  data-params-group="<%= config[:params_group] %>"
  data-item-id="<%= config[:item_id] %>"
  data-attribute-name="<%= t('Experiments') %> <%= t('name') %>"
>
  <inline-edit-container
    :value="value"
    :character-limit="characterLimit"
    :allow-blank="allowBlank"
    :attribute-name="attributeName"
    :callback-on-disabled="callbackOnDisabled"
    @update="updateName"
    @editing:enabled="editingEnabled"
    @editing:disabled="editingDisabled"
    @delete="editingDisabled"
  />
</div>

<%= javascript_pack_tag 'vue/inline_edit' %>
