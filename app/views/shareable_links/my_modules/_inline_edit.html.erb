<div class="sci-inline-edit" tabindex="0">
  <div class="sci-inline-edit__content">
    <div class="sci-inline-edit__view !whitespace-normal <%= 'blank' if text.blank? %>">
      <% if text.blank? %>
        <%= placeholder %>
      <% elsif smart_annotation_enabled %>
        <%= smart_annotation_text(text) %>
      <% else %>
        <%= text %>
      <% end %>
    </div>
  </div>
</div>

