<div
  class="inline-editing-container inline-init-handler"
  title="inline edit objects name: <%= initial_value %>""
  data-field-to-update="<%= config[:field_to_udpate] %>"
  data-params-group="<%= config[:params_group] %>"
  data-item-id="<%= config[:item_id] %>"
  data-path-to-update="<%= config[:path_to_update] %>"
  data-original-name="<%= initial_value %>"
  data-label-after='<%= config[:label_after]&.html_safe %>'
  data-placeholder='<%= config[:placeholder] %>'
>
  <div class="view-mode" data-placeholder="<%= config[:placeholder] %>" tabindex=0><%= initial_value %></div>
  <input title="editing mode for <%= initial_value%>" placeholder="<%= config[:placeholder] %>" class="hidden input-field" type="text" value="<%= initial_value %>" disabled/>
  <div class="button-container">
    <span class="save-button"><i title="<%= config[:title] %> save" class="fas fa-check"></i></span>
    <span class="cancel-button"><i title="<%= config[:title] %> cancel" class="fas fa-times"></i></span>
  </div>
  <span class="error-block"></span>
</div>
